NAME = philo

SRCS = ${shell find ./src -iname "*.c"}

OBJS = ${SRCS:.c=.o}

CC = gcc
# CFLAGS = -Wall -Wextra -Werror -D_THREAD_SAFE -Iincludes -fsanitize=thread -g
CFLAGS = -Iincludes -Wall -Wextra -Werror -fsanitize=thread -g

RM = rm -rf

all: ${NAME}
${NAME}: ${OBJS}
	@${CC} ${CFLAGS} ${OBJS} -o ${NAME}


clean:
	@${RM} ${OBJS}

fclean: clean
	@${RM} ${NAME}

re: fclean all

.PHONY: all clean fclean re
