NAME = push_swap

# directories
OBJ_DIR = obj/
SRC_DIR = srcs/
INC_DIR = includes/
LIBFT_DIR = libft/

# complier
CFLAGS = -Wall -Werror -Wextra

# src & obj files
SRCS:= command.c create_free_list.c lst.c math.c print_command.c sort.c util.c check.c command2.c main.c push_swap.h solve_little.c
OBJS = $(SRCS:.c=.o)

# libraries
LIBFT = ft


INCLUDES = -I $(LIBFT_DIR)includes/ -I includes/

all: $(NAME)


$(NAME): $(OBJS)
	$(MAKE) -C $(LIBFT_DIR)
	@cp $(LIBFT_DIR)/libft.a ./$(NAME)
	@gcc $(NAME) $(OBJS) -o $(NAME)

$(OBJS): $(SRCS)
	@mkdir -p $(OBJ_DIR)
	@gcc $(CFLAGS) $(INCLUDES) -c $^


bonus: all

clean:
	$(MAKE) -C $(LIBFT_DIR) clean
	@/bin/rm -rf $(OBJS)

fclean: clean
	$(MAKE) -C $(LIBFT_DIR) fclean
	@/bin/rm -f  $(NAME)

re: fclean all bonus

norm:
	@norminette | grep Error

.PHONY: all clean fclean re $(NAME) norm
